%head
  = javascript_include_tag "application"
= image_tag @jewel.primary_image.url, id: "mainimage"
%div#description
  = @jewel.description
#details
  %dl
    %dt Clarity:
    %dd#clarity 
      = @jewel.clarity
    %dt Weight:
    %dd#weight 
      = @jewel.weight
      Kt
  %dt Cut:
  %dd#cut 
    = @jewel.cut
  %dt Metal:
  %dd#metal
    = "#{@jewel.metal_color} " "#{@jewel.metal_weight}" 
    Kt


%div#emptydiv

%div#birth

- if can? :update, @jewel
  = link_to t(:edit), edit_jewel_path(@jewel), class: 'btn'
