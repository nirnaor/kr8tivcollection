- if can? :update, Jewel
  = link_to new_jewel_path, class: 'btn btn-success' do
    %i.icon-plus.icon-white
    = t(:new_jewel)

.ContentFlow
  .loadIndicator
    .indicator
  .flow
    -@jewels.each do |jewel|
      =link_to jewel, class: 'item' do
        =image_tag jewel.primary_image.url, class: "content", title: "dudi"
  .globalCaption
  .scrollbar
    .slider
      .position       

